pre_erlang_get_and_update_deps() {
  if [ "$TARGET_MIX_ENV" = "prod" ]; then
    __sync_remote "
      source ~/.profile
    "

    __sync_remote "
      npm install --prefix '$BUILD_AT/apps/prometheus_umbrella/assets'
    "
  fi
}